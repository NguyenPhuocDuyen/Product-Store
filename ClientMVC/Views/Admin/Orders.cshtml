@model List<Models.Order>
@{
}
<style>
    /* Thiết lập style cho nút điều khiển */
    .btn-sm {
        padding: 0.2rem 0.5rem;
        font-size: 0.875rem;
    }

    .view-order-btn {
        margin-right: 0.5rem;
    }

    /* Thiết lập style cho dòng được chọn */
    tr.selected {
        background-color: #e2e2e2;
    }
</style>
<div class="container-fluid p-5">
    <table id="orderTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Phone Khách Hàng</th>
                <th>Địa Chỉ</th>
                <th>Ngày Đặt</th>
                <th>Trạng Thái Đơn Hàng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.FullName</td>
                    <td>@item.User.Phone</td>
                    <td>@item.User.Address</td>
                    <td>@item.CreateAt</td>
                    <td>@item.Status.Title</td>
                    <td>
                        <a asp-action="OrderDetail" asp-controller="Customer" asp-route-id="@item.Id" 
                        class="btn btn-@(item.StatusId == 1 ? "success" : "primary") btn-sm view-order-btn">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
            <!-- Các dòng khác của bảng -->
        </tbody>
    </table>
</div>