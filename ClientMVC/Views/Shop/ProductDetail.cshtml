<!-- Related Section Begin -->
<section class="related spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="related-title">Related Product</h3>
            </div>
        </div>
        <div class="row">
            @foreach(var item in products)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/img/product/product-1.jpg">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="#"><img src="/img/icon/heart.png" alt=""></a></li>
                                <li><a href="#"><img src="/img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                <li><a href="@Url.Action("ProductDetail", "Shop", new { id = item.Id })"><img src="~/img/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.Title</h6>
                            @if (String.IsNullOrEmpty(token))
                            {
                                <a asp-action="Login" asp-controller="Account" class="add-cart">Login to buy</a>
                            } 
                            else
                            {
                                <a style="cursor: pointer" id="addCart" class="add-cart" data-id="@item.Id">+ Add To Cart</a>
                            }

                            @{
                                numberOfStar = 0;
                                if (item.Reviews.Any())
                                {
                                    numberOfStar = item.Reviews.Sum(x => x.Rate) / item.Reviews.Count();
                                }
                            }

                            <div class="rating">
                                @for(int i = 0; i < 5; i++)
                                {
                                    if(i < numberOfStar)
                                    {
                                        <i style="color: orange" class="fa fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star-o"></i>
                                    }
                                }
                                <i hidden class="fa fa-star"></i>
                            </div>
                            <h5>@item.RecentPrice</h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Related Section End -->

<script>
    $(document).ready(function () {

        //add cart in list relate
        var buttons = document.querySelectorAll('#addCart');
        buttons.forEach(function (button) {
            button.addEventListener('click', function () {
                var productId = this.dataset.id;
                var quantity = $('#quatity').val();

                // Lấy chuỗi token từ cookie hoặc local storage (nếu đã đăng nhập)
                var token = 'Bearer @Html.Raw(token)';

                $.ajax({
                    url: 'https://localhost:44364/api/apigateway/Carts/AddProductToCart',
                    type: 'POST',
                    beforeSend: function(xhr) {
                        xhr.setRequestHeader('Authorization', token);
                    },
                    data: JSON.stringify({ ProductId: productId, quantity: quantity }),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {
                        console.log("success", productId);
                        toastr.success('Product added to cart successfully!');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log('Error: ' + textStatus + ' - ' + errorThrown);
                        toastr.error('Error occurred while adding product to cart!');
                    }
                });
            });
        });

        //add cart in Product Detail
        var button = document.querySelector('#addCartDetail');
            button.addEventListener('click', function () {
                var productId = this.dataset.id;
                // Lấy chuỗi token từ cookie hoặc local storage (nếu đã đăng nhập)
                var token = 'Bearer @Html.Raw(token)';

                $.ajax({
                    url: 'https://localhost:44364/api/apigateway/Carts/AddProductToCart',
                    type: 'POST',
                    beforeSend: function(xhr) {
                        xhr.setRequestHeader('Authorization', token);
                    },
                    data: JSON.stringify({ ProductId: productId }),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {
                        console.log("success", productId);
                        toastr.success('Product added to cart successfully!');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log('Error: ' + textStatus + ' - ' + errorThrown);
                        toastr.error('Error occurred while adding product to cart!');
                    }
                });
            });
    });
</script>