@model Models.ViewModel.UserForgotPassword
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Quên Mật Khẩu</></h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <input type="hidden" name="tokenPassword" value="@ViewBag.TokenPassword"/>
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Email..."/>
                        <span asp-validation-for="Email" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" type="password" placeholder="Mật khẩu mới..."/>
                        <span asp-validation-for="Password" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword"  type="password" placeholder="Nhập lại mật khẩu mới..."/>
                        <span asp-validation-for="ConfirmPassword" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <p class="alert-" style="color: red;">@ViewBag.mess</p>
                        <p class="alert-" style="color: #2300ff;">@ViewBag.notification</p>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="register-btn" class="form-submit" value="Đăng ký lại mật khẩu"/>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/images/Register.png" alt="sing up image"></figure>
                <a asp-action="Login" asp-controller="Account" class="signup-image-link">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}