@model Models.ViewModel.UserRegister
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Dang Ky</></h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="FullName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="FullName" placeholder="Tên của bạn..."/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Email..."/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" type="password" placeholder="Mật khẩu..."/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu..."/>
                    </div>
                    @*<div class="form-group">
                        <input asp-for="agreeRule" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>*@
                    <span style="color: red">@ViewBag.error</span>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng Ký"/>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" asp-controller="Account" class="signup-image-link">Tôi có tài khoản</a>
                <a asp-action="Index" asp-controller="Home" class="signup-image-link">Về Trang Chủ</a>
            </div>
        </div>
    </div>
</section>