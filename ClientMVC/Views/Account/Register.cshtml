@model Models.ViewModel.UserRegister
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Dang Ky</></h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="FullName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="FullName" placeholder="Tên của bạn..."/>
                        <span asp-validation-for="FullName" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Address" placeholder="Địa chỉ của bạn..."/>
                        <span asp-validation-for="Address" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Phone" placeholder="Số điện thoại của bạn..."/>
                        <span asp-validation-for="Phone" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Email..."/>
                        <span asp-validation-for="Email" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" type="password" placeholder="Mật khẩu..."/>
                        <span asp-validation-for="Password" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword"  type="password" placeholder="Nhập lại mật khẩu..."/>
                        <span asp-validation-for="ConfirmPassword" style="color: red" class="alert-danger form-control"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng Ký"/>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" asp-controller="Account" class="signup-image-link">Tôi có tài khoản</a>
                <a asp-action="Index" asp-controller="Home" class="signup-image-link">Về Trang Chủ</a>
            </div>
        </div>
    </div>
</section>